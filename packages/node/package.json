{
    "name": "@af/sweph-node",
    "version": "0.3.0",
    "description": "Node.js bindings for Swiss Ephemeris",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "prebuilds",
        "src"
    ],
    "scripts": {
        "build": "tsc",
        "build:check": "node scripts/check-static-requires.js",
        "test": "vitest run",
        "lint": "eslint src",
        "prebuild:linux": "bash scripts/build-linux-prebuild.sh",
        "copy:darwin-arm64": "mkdir -p prebuilds/darwin-arm64 && cp ../../node_modules/swisseph-v2/build/Release/swisseph.node prebuilds/darwin-arm64/",
        "validate-dist": "node -e \"require('./dist/index.js'); console.log('âœ… Dist files are valid');\"",
        "check-platform": "node -e \"const {getPlatformInfo}=require('./dist/native-loader');console.log(JSON.stringify(getPlatformInfo(),null,2));\""
    },
    "dependencies": {
        "@af/sweph-core": "workspace:*",
        "node-gyp-build": "^4.8.0"
    },
    "optionalDependencies": {
        "swisseph-v2": "^1.0.4"
    },
    "devDependencies": {
        "typescript": "^5.9.3",
        "vitest": "^1.6.1",
        "@types/node": "^20.12.7"
    }
}