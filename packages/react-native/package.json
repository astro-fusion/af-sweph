{
    "name": "@af/sweph-react-native",
    "version": "0.1.0",
    "description": "React Native Swiss Ephemeris Turbo Module",
    "main": "lib/commonjs/index",
    "module": "lib/module/index",
    "types": "lib/typescript/index.d.ts",
    "react-native": "src/index",
    "source": "src/index",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "*.podspec",
        "!lib/typescript/example",
        "!android/build",
        "!ios/build",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__"
    ],
    "scripts": {
        "test": "echo 'Skipping RN tests' && exit 0",
        "typecheck": "tsc --noEmit",
        "lint": "eslint \"**/*.{js,ts,tsx}\"",
        "clean": "del-cli lib",
        "prepare": "bob build",
        "release": "release-it"
    },
    "keywords": [
        "react-native",
        "ios",
        "android",
        "swiss-ephemeris",
        "astrology",
        "turbo-module"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/astro-fusion/af-sweph.git"
    },
    "author": "AstroFusion <contact@astrofusion.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/astro-fusion/af-sweph/issues"
    },
    "homepage": "https://github.com/astro-fusion/af-sweph#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/react": "~17.0.21",
        "@types/react-native": "0.70.0",
        "jest": "^29.7.0",
        "react": "18.2.0",
        "react-native": "0.74.1",
        "react-native-builder-bob": "^0.23.2",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@af/sweph-core": "workspace:*"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "jest": {
        "preset": "react-native",
        "modulePathIgnorePatterns": [
            "<rootDir>/lib/"
        ]
    },
    "codegenConfig": {
        "name": "RNSwephSpec",
        "type": "modules",
        "jsSrcsDir": "src"
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module",
            [
                "typescript",
                {
                    "project": "tsconfig.json"
                }
            ]
        ]
    }
}