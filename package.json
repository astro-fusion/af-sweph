{
  "name": "@af/sweph",
  "version": "0.1.8",
  "description": "Swiss Ephemeris library for Vedic astrology calculations with pre-built native binaries",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "prebuilds",
    "ephe",
    "binding.gyp",
    "native",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json && node scripts/post-build-esm.js",
    "prebuild": "echo 'This is a JavaScript wrapper around swisseph-v2 - no native compilation needed'",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "prepublishOnly": "npm run build",
    "validate-dist": "node -e \"require('./dist/index.js'); console.log('âœ… Dist files are valid');\""
  },
  "keywords": [
    "swiss-ephemeris",
    "sweph",
    "astrology",
    "vedic",
    "jyotish",
    "kundali",
    "horoscope",
    "planets",
    "ephemeris"
  ],
  "author": "AstroFusion <contact@astrofusion.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:astro-fusion/af-sweph.git"
  },
  "bugs": {
    "url": "https://github.com/astro-fusion/af-sweph/issues"
  },
  "homepage": "https://github.com/astro-fusion/af-sweph#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "swisseph-v2": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "prebuildify": "^6.0.1",
    "prebuildify-cross": "^5.1.1",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
